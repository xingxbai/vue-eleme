border-1px($rgba)
    position relative
    &::after
        display block
        position absolute
        bottom 0
        left 0
        width 100%
        content " "
        border-top:1px solid $rgba
border-none()
    &:after
        display none

bgImg($url)
    background-image: url($url +'@2x.png')
    @media (-webkit-min-device-pixel-ratio:3),(min-device-pixel-ratio:3)
        background-image: url($url +'@3x.png')